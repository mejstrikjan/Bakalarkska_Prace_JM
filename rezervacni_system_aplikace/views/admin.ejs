<!DOCTYPE html>
<html lang="cs">
<head>
  <meta charset="UTF-8" />
  <title>Admin - Rezervace</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <!-- NAVBAR -->
  <%- include('partials/navbar', { user }) %>

  <div class="container-xl mt-4 px-3 px-md-4">
    <div class="admin-panel p-4 rounded shadow">

      <!-- DASHBOARD -->
      <div class="mb-4 bg-dark text-white rounded p-4 shadow-sm">
        <h4 class="mb-3">üìÖ Rezervace dnes (<%= todayReservations.length %>)</h4>
        <% if (todayReservations.length === 0) { %>
          <p class="text-light-emphasis">Dnes nejsou ≈æ√°dn√© rezervace.</p>
        <% } else { %>
          <ul class="list-group list-group-flush">
            <% todayReservations.forEach(res => { %>
              <li class="list-group-item bg-transparent text-white">
                <strong><%= new Date(res.reservationDate).toLocaleTimeString('cs-CZ') %></strong> ‚Äì
                <%= res.name %> <%= res.sname %> |
                Headset: <%= res.headsetModel || '-' %> |
                D√©lka: <%= res.durationMinutes %> min |
                Stav: <%= res.status %>
              </li>
            <% }) %>
          </ul>
        <% } %>
      </div>

      <!-- VYHLED√ÅV√ÅN√ç -->
      <h2 class="mb-4">P≈ôehled rezervac√≠</h2>
      <form class="row g-3 mb-4" method="GET" action="/admin">
        <input type="hidden" name="searchVoucher" value="<%= searchVoucher %>" />
        <div class="col-md-8">
          <input type="text" name="searchRes" class="form-control" placeholder="Hledat v rezervac√≠ch" value="<%= searchRes %>" />
        </div>
        <div class="col-md-2">
          <div class="form-check mt-2">
            <input class="form-check-input" type="checkbox" name="upcoming" value="true" id="chkUpcoming" <%= upcoming === 'true' ? 'checked' : '' %> />
            <label class="form-check-label" for="chkUpcoming">Jen nadch√°zej√≠c√≠</label>
          </div>
        </div>
        <div class="col-md-2">
          <button type="submit" class="btn btn-primary w-100">Filtrovat</button>
        </div>
      </form>

      <!-- TABULKA REZERVAC√ç -->
      <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
          <thead class="table-dark">
            <tr>
              <th>#</th>
              <th>Jm√©no</th>
              <th>P≈ô√≠jmen√≠</th>
              <th>Email</th>
              <th>Telefon</th>
              <th>Vytvo≈ôeno</th>
              <th>
                <a href="/admin?<%= upcoming ? 'upcoming=true&' : '' %>sort=<%= sort === 'date_desc' ? 'date_asc' : 'date_desc' %>">
                  Datum rezervace <%= sort === 'date_desc' ? '‚¨áÔ∏è' : '‚¨ÜÔ∏è' %>
                </a>
              </th>
              <th>D√©lka</th>
              <th>Cena</th>
              <th>Stav</th>
              <th>Voucher</th>
              <th>Akce</th>
            </tr>
          </thead>
          <tbody>
            <% if (reservations.length === 0) { %>
              <tr><td colspan="12" class="text-center">≈Ω√°dn√© rezervace nenalezeny.</td></tr>
            <% } else { %>
              <% reservations.forEach(r => { %>
                <tr>
                  <td><%= r.reservationID %></td>
                  <td><%= r.name %></td>
                  <td><%= r.sname %></td>
                  <td><%= r.email %></td>
                  <td><%= r.phonenumber || '-' %></td>
                  <td><%= new Date(r.creationDate).toLocaleString('cs-CZ') %></td>
                  <td><%= new Date(r.reservationDate).toLocaleString('cs-CZ') %></td>
                  <td><%= r.durationMinutes %> min</td>
                  <td><%= r.totalPrice.toFixed(2) %> Kƒç</td>
                  <td><%= r.status %></td>
                  <td><%= r.voucherCode || '-' %></td>
                  <td><a href="/admin/reservation/<%= r.reservationID %>/edit" class="btn btn-sm btn-outline-primary">Upravit</a></td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>

      <!-- STR√ÅNKOV√ÅN√ç REZERVAC√ç -->
      <nav class="mt-3">
        <ul class="pagination justify-content-center">
          <% if (page > 1) { %>
            <li class="page-item"><a class="page-link" href="?page=<%= page - 1 %>&<%= sort ? 'sort=' + sort + '&' : '' %>">P≈ôedchoz√≠</a></li>
          <% } %>
          <li class="page-item disabled"><span class="page-link">Strana <%= page %></span></li>
          <% if (hasMore) { %>
            <li class="page-item"><a class="page-link" href="?page=<%= page + 1 %>&<%= sort ? 'sort=' + sort + '&' : '' %>">Dal≈°√≠</a></li>
          <% } %>
        </ul>
      </nav>

      <!-- VOUCHERY -->
      <hr class="my-5" id="voucher-section" />
      <h2 class="mb-4">P≈ôehled v≈°ech voucher≈Ø</h2>
      <form class="row g-3 mb-3" method="GET" action="/admin#voucher-section">
        <input type="hidden" name="searchRes" value="<%= searchRes %>" />
        <div class="col-md-10">
          <input type="text" name="searchVoucher" class="form-control" placeholder="Hledat ve voucherech" value="<%= searchVoucher %>" />
        </div>
        <div class="col-md-2">
          <button type="submit" class="btn btn-secondary w-100">Hledat</button>
        </div>
      </form>

      <div class="table-responsive">
        <table class="table table-striped table-bordered">
          <thead class="table-dark">
            <tr>
              <th>K√≥d</th>
              <th>Poƒçet pou≈æit√≠</th>
              <th>Vyƒçerp√°no</th>
              <th>Platnost do</th>
              <th>U≈æivatel</th>
              <th>Stav</th>
              <th>Akce</th>
            </tr>
          </thead>
          <tbody>
            <% vouchers.forEach(voucher => { %>
              <tr>
                <td><%= voucher.voucherCode %></td>
                <td><%= voucher.maxUses %></td>
                <td><%= voucher.usedCount %></td>
                <td><%= voucher.expirationDate ? new Date(voucher.expirationDate).toLocaleString('cs-CZ') : 'Nezad√°no' %></td>
                <td><%= voucher.userID ? voucher.username + ' (' + voucher.email + ')' : 'Anonymn√≠' %></td>
                <td><%= voucher.usedCount >= voucher.maxUses ? 'Neaktivn√≠' : 'Aktivn√≠' %></td>
                <td><a href="/admin/edit-voucher/<%= voucher.voucherID %>" class="btn btn-sm btn-primary">Upravit</a></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <!-- STR√ÅNKOV√ÅN√ç VOUCHER≈Æ -->
      <nav class="mt-3" id="voucher-pagination">
        <ul class="pagination justify-content-center">
          <% if (voucherPage > 1) { %>
            <li class="page-item">
              <a class="page-link" href="?voucherPage=<%= voucherPage - 1 %>#voucher-section">P≈ôedchoz√≠</a>
            </li>
          <% } %>
          <li class="page-item disabled"><span class="page-link">Strana <%= voucherPage %></span></li>
          <% if (voucherHasMore) { %>
            <li class="page-item">
              <a class="page-link" href="?voucherPage=<%= voucherPage + 1 %>#voucher-section">Dal≈°√≠</a>
            </li>
          <% } %>
        </ul>
      </nav>

      <a href="/admin/create-voucher" class="btn btn-success mt-4">Vygenerovat nov√Ω voucher</a>
    </div>
  </div>

  <!-- PATIƒåKA -->
  <footer class="footer mt-5 mb-3 text-center text-muted">
    &copy; <%= new Date().getFullYear() %> Rezervaƒçn√≠ syst√©m VR
  </footer>
</body>
</html>
