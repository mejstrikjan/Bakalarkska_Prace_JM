<!DOCTYPE html>
<html lang="cs">
<head>
  <meta charset="UTF-8">
  <title>Přihlášení</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      background: url('/images/vr-bg.png') no-repeat center center fixed;
      background-size: cover;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: white;
    }

    .login-wrapper {
      max-width: 480px;
      margin: 100px auto;
    }

    .login-container {
      padding: 40px;
      border-radius: 16px;
      position: relative;
      z-index: 1;
      background-color: rgba(15, 20, 25, 0.85);
      box-shadow: 0 0 20px rgba(102, 252, 241, 0.3);
      border: 2px solid #66fcf1;
    }

    .form-control {
      background-color: #1f2833;
      color: white;
      border: none;
    }

    .form-control:focus {
      background-color: #1f2833;
      box-shadow: 0 0 0 2px rgba(102, 252, 241, 0.3);
    }

    .btn-primary.alt {
      background-color: #45a29e;
      border: none;
    }

    .btn-primary.alt:hover {
      background-color: #3a8b89;
    }

    a.text-info {
      color: #66fcf1;
    }

    a.text-info:hover {
      color: #52c7c3;
    }
  </style>
</head>
<body class="dark">

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
    <a class="navbar-brand" href="/">Rezervační systém</a>
    <div class="collapse navbar-collapse justify-content-end">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/register">Registrovat</a>
        </li>
      </ul>
    </div>
  </nav>b

  <!-- FORMULÁŘ -->
  <div class="container">
    <div class="form-container">
      <h2 class="form-title">Přihlášení</h2>

      <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>

      <form method="POST" action="/login">
        <div class="mb-3">
          <label for="email" class="form-label">E-mail</label>
          <input type="email" class="form-control" name="email" required>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Heslo</label>
          <input type="password" class="form-control" name="password" required>
        </div>

        <div class="d-grid">
          <button type="submit" class="btn btn-primary">Přihlásit se</button>
        </div>
      </form>

      <div class="text-center mt-3">
        Nemáš účet? <a href="/register">Zaregistruj se</a>
      </div>
    </div>
  </div>

</body>
</html>
